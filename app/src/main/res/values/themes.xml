<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SpinoCare" parent="android:Theme.Material.Light.NoActionBar" />
    
    <!-- Custom UCrop theme with proper window insets handling -->
    <style name="Theme.SpinoCare.UCrop" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App theme colors -->
        <item name="colorPrimary">#E57373</item>
        <item name="colorPrimaryDark">#C62828</item>
        <item name="colorAccent">#E57373</item>
        
        <!-- Enable edge-to-edge with proper insets -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        
        <!-- Ensure toolbar respects system insets -->
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>